/*Calculates the volume of a sphere with a certain radius*/ 

#include <stdio.h>

#define PI 3.14f 
#define FRACTION (4.0f / 3.0f) 

int main(void)
{
    float volume, radius;
    
    printf ("Enter the desired radius: ");
    scanf ("%f", &radius);
    
    volume = FRACTION * PI * radius * radius * radius;
    printf ("Volume of sphere (cubic meters) : %.2f\n", volume);
    
    return 0; 
}
